<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/user_row_profile_pic_id"
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:layout_margin="8dp"
               android:layout_alignParentStart="true"
               android:src="@drawable/profile_img"/>

           <TextView
               android:id="@+id/user_row_user_name_text_id"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignTop="@+id/user_row_profile_pic_id"
               android:layout_toEndOf="@+id/user_row_profile_pic_id"
               android:text="User name"
               android:textSize="18sp"
               android:textStyle="bold" />

           <TextView
               android:id="@+id/user_row_user_status_text_id"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="User status"
               android:textSize="14sp"
               android:layout_toRightOf="@id/user_row_profile_pic_id"
               android:layout_below="@id/user_row_user_name_text_id"
               />

       </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>